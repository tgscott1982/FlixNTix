@model Theater

@{
    ViewData["Title"] = "Update Theater";
}

<div class="row text">
    <div class="col-md-8 offset-2 text-white">
        <p>
            <h1 class="text-center">Update Theater</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                   <div asp-validation-summary="ModelOnly" class="text-warning"></div>
                    <div class="form-group text-center" style="margin-top: 10px">
                        <img id="TheaterLogoPreview" class="border-info rounded-circle" style="max-width: 250px" />
                    </div>
                    <div class="form-group text-center">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-info text-white float-end" style="margin-top: 5px" />
                        <a class="btn btn-outline-secondary text-white" style="margin-top: 5px" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function() {
            var output = document.getElementById('TheaterLogoPreview');
            output.src = $("#Logo").val();
        })

        $("#Logo").on("change", function () {
            var output = document.getElementById('TheaterLogoPreview');
            output.src = $(this).val();
        })
    </script>
}